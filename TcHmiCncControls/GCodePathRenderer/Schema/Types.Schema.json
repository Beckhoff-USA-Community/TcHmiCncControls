{
  "$schema": "http://json-schema.org/draft-04/schema",
  "definitions": {
    "TcHmi.Controls.TcHmiCncControls.GCodePathRenderer": {
      "type": "object",
      "frameworkInstanceOf": "TcHmi.Controls.System.TcHmiControl",
      "frameworkControlType": "GCodePathRenderer",
      "frameworkControlNamespace": "TcHmi.Controls.TcHmiCncControls"
    },
    "CncConfig": {
      "type": "object",
      "properties": {
        "ijkRelative": {
          "type": "boolean"
        },
        "arcSegmentCount": {
          "type": "integer"
        },
        "workArea": {
          "$ref": "tchmi:framework#/definitions/WorkAreaConfig"
        },
        "workOffsets": {
          "type": "object",
          "properties": {
            "g54": {
              "$ref": "tchmi:framework#/definitions/Vector3",
              "default": {
                "x": 0.0,
                "y": 0.0,
                "z": 0.0
              }
            },
            "g55": {
              "$ref": "tchmi:framework#/definitions/Vector3",
              "default": {
                "x": 0.0,
                "y": 0.0,
                "z": 0.0
              }
            },
            "g56": {
              "$ref": "tchmi:framework#/definitions/Vector3",
              "default": {
                "x": 0.0,
                "y": 0.0,
                "z": 0.0
              }
            },
            "g57": {
              "$ref": "tchmi:framework#/definitions/Vector3",
              "default": {
                "x": 0.0,
                "y": 0.0,
                "z": 0.0
              }
            },
            "g58": {
              "$ref": "tchmi:framework#/definitions/Vector3",
              "default": {
                "x": 0.0,
                "y": 0.0,
                "z": 0.0
              }
            },
            "g59": {
              "$ref": "tchmi:framework#/definitions/Vector3",
              "default": {
                "x": 0.0,
                "y": 0.0,
                "z": 0.0
              }
            }
          }
        }
      },
      "propertiesMeta": [
        {
          "name": "ijkRelative",
          "displayName": "IJK Relative",
          "displayPriority": 1,
          "description": "IJK arc center point parameters are relative (true) or absolute (false) to XYZ.",
          "defaultValue": true,
          "defaultValueInternal": true
        },
        {
          "name": "arcSegmentCount",
          "displayName": "Arc Segment Count",
          "displayPriority": 2,
          "description": "Number of line segments to used for arc interpolation rendering.",
          "defaultValue": 32,
          "defaultValueInternal": 32
        },
        {
          "name": "workArea",
          "displayName": "Work Area",
          "displayPriority": 3,
          "description": "Work Area"
        },
        {
          "name": "workOffsets",
          "displayName": "Work Offsets",
          "displayPriority": 4,
          "description": "G54-G59 Work offset coordinates."
        }
      ]
    },
    "ToolingDynamics": {
      "type": "object",
      "properties": {
        "position": {
          "$ref": "tchmi:framework#/definitions/Vector3"
        },
        "rotation": {
          "$ref": "tchmi:framework#/definitions/Vector3"
        }
      },
      "propertiesMeta": [
        {
          "name": "position",
          "displayName": "Position",
          "displayPriority": 1,
          "description": "Position",
          "defaultValue": {
            "x": 0,
            "y": 0,
            "z": 0
          },
          "defaultValueInternal": {
            "x": 0,
            "y": 0,
            "z": 0
          }
        },
        {
          "name": "rotation",
          "displayName": "Rotation",
          "displayPriority": 2,
          "description": "Rotation",
          "defaultValue": {
            "x": 0,
            "y": 0,
            "z": 0
          },
          "defaultValueInternal": {
            "x": 0,
            "y": 0,
            "z": 0
          }
        }
      ]
    },
    "ToolingConfig": {
      "type": "object",
      "properties": {
        "showTooling": {
          "type": "boolean"
        },
        "modelFilePath": {
          "$ref": "tchmi:framework#/definitions/Path"
        },
        "rotationUnit": {
          "type": "string",
          "enum": [ "Degrees", "Radian" ]
        },
        "positionOffset": {
          "$ref": "tchmi:framework#/definitions/Vector3"
        },
        "rotationOffset": {
          "$ref": "tchmi:framework#/definitions/Vector3"
        },
        "scaling": {
          "$ref": "tchmi:framework#/definitions/Vector3"
        },
        "trackToolPath": {
          "type": "boolean"
        },
        "cameraFollow": {
          "type": "boolean"
        }
      },
      "propertiesMeta": [
        {
          "name": "showTooling",
          "displayName": "Show Tooling",
          "description": "Show tooling model in rendering.",
          "displayPriority": 1,
          "defaultValue": true,
          "defaultValueInternal": true
        },
        {
          "name": "modelFilePath",
          "displayName": "Model File Path",
          "description": "Path to tooling model file.",
          "displayPriority": 2,
          "defaultValue": null,
          "defaultValueInternal": null
        },
        {
          "name": "rotationUnit",
          "displayName": "Rotation Units",
          "description": "Unit type for rotational values.",
          "displayPriority": 3,
          "defaultValue": "Degrees",
          "defaultValueInternal": "Degrees"
        },
        {
          "name": "positionOffset",
          "displayName": "Position Offset",
          "description": "Static position offset values for tool rendering.",
          "displayPriority": 4,
          "defaultValue": {
            "x": 0,
            "y": 0,
            "z": 0
          },
          "defaultValueInternal": {
            "x": 0,
            "y": 0,
            "z": 0
          }
        },
        {
          "name": "rotationOffset",
          "displayName": "Rotation Offset",
          "description": "Static location offset values for tool rendering.",
          "displayPriority": 5,
          "defaultValue": {
            "x": 0,
            "y": 0,
            "z": 0
          },
          "defaultValueInternal": {
            "x": 0,
            "y": 0,
            "z": 0
          }
        },
        {
          "name": "scaling",
          "displayName": "Scaling",
          "description": "Static scaling values for tool rendering.",
          "displayPriority": 6,
          "defaultValue": {
            "x": 1.0,
            "y": 1.0,
            "z": 1.0
          },
          "defaultValueInternal": {
            "x": 1.0,
            "y": 1.0,
            "z": 1.0
          }
        },
        {
          "name": "trackToolPath",
          "displayName": "Track Tool Path",
          "displayPriority": 7,
          "description": "Enable tool path tracking from position dynamics.",
          "defaulValue": false
        },
        {
          "name": "cameraFollow",
          "displayName": "Camera Follows",
          "description": "Camera follows tool position when true.",
          "displayPriority": 8,
          "defaultValue": false,
          "defaultValueInternal": false
        }
      ]
    },
    "WorkAreaConfig": {
      "title": "Work Area Config",
      "type": "object",
      "description": "Work area rendering config",
      "properties": {
        "visible": {
          "type": "boolean"
        },
        "color": {
          "$ref": "tchmi:framework#/definitions/SolidColor"
        },
        "width": {
          "type": "number"
        },
        "height": {
          "type": "number"
        },
        "zoffset": {
          "type": "number"
        },
        "originAlignment": {
          "type": "string",
          "enum": [
            "Center",
            "BottomLeft",
            "BottomRight",
            "TopLeft",
            "TopRight"
          ]
        },
        "units": {
          "type": "string",
          "enum": [ "inches", "mm" ]
        }
      },
      "propertiesMeta": [
        {
          "name": "visible",
          "displayName": "Visible",
          "description": "Show rendering",
          "displayPriority": 1,
          "defaultValue": false,
          "defaultValueInternal": false
        },
        {
          "name": "color",
          "displayName": "Color",
          "description": "Work area mesh color",
          "defaultValue": null,
          "defaultValueInternal": null
        },
        {
          "name": "width",
          "displayName": "Width",
          "description": "Work area width",
          "displayPriority": 2,
          "defaultValue": 24,
          "defaultValueInternal": 24
        },
        {
          "name": "height",
          "displayName": "Height",
          "description": "Work area height",
          "displayPriority": 3,
          "defaultValue": 24,
          "defaultValueInternal": 24
        },
        {
          "name": "zoffset",
          "displayName": "Z Offset",
          "description": "Work area Z position offset",
          "displayPriority": 4,
          "defaultValue": -0.1,
          "defaultValueInternal": -0.1
        },
        {
          "name": "originAlignment",
          "displayName": "Origin Alignment",
          "description": "Work area alignment with origin",
          "displayPriority": 5,
          "defaultValue": "Center",
          "defaultValueInternal": "Center"
        },
        {
          "name": "units",
          "displayName": "Units",
          "description": "Work area dimension units",
          "displayPriority": 6,
          "defaultValue": "inches",
          "defaultValueInternal": "inches"
        }
      ]
    },
    "Vector3": {
      "title": "Vector3",
      "type": "object",
      "description": "XYZ axis values",
      "propertiesMeta": [
        {
          "name": "x",
          "displayName": "X",
          "description": "X axis value",
          "defaultValue": 0,
          "defaultValueInternal": 0
        },
        {
          "name": "y",
          "displayName": "Y",
          "description": "Y axis value",
          "defaultValue": 0,
          "defaultValueInternal": 0
        },
        {
          "name": "z",
          "displayName": "Z",
          "description": "Z axis value",
          "defaultValue": 0,
          "defaultValueInternal": 0
        }
      ],
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "z": {
          "type": "number"
        }
      }
    }
  }
}
