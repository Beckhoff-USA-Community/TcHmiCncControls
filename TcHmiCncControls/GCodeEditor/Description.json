      "description": "Load GCode File via Path",
      "params": [
        {
          "displayName": "FileName",
          "name": "file",
          "type": "tchmi:general#/definitions/String",
          "visible": true,
          "bindable": true,
          "description": "GCode/nc file name"
        },
        {
          "displayName": "Path",
          "name": "path",
          "type": "tchmi:general#/definitions/String",
          "visible": true,
          "bindable": true,
          "description": "GCode/nc file path"
