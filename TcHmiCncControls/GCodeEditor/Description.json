    {
      "name": "GCodeEditor.js",
      "type": "JavaScript",
      "description": "Contains all the main logic."
    },
    {
      "name": "Style.css",
      "type": "Stylesheet",
      "description": "Theme independent style"
    },
    {
      "name": "lib/ace/ace.js",
      "type": "JavaScript",
      "description": "Ace library reference"
    }
  ],
    "themes": {
        "Base": {
            "resources": [
                {
                    "name": "Themes/Base/Style.css",
                    "type": "Stylesheet",
                    "description": "Theme dependent style"
                }
            ]
        },
        "Base-Dark": {
            "resources": [
                {
                    "name": "Themes/Base-Dark/Style.css",
                    "type": "Stylesheet",
                    "description": "Theme dependent style"
                }
            ]
        }
    },
