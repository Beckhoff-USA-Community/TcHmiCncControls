    {
      "category": "Common",
      "displayName": "Save",
      "heritable": true,
      "name": "save",
      "type": null,
      "visible": true,
      "description": "Save GCode file"
    },
    {
      "category": "Common",
      "displayName": "GoToLine",
      "heritable": true,
      "name": "gotoLine",
      "type": null,
      "visible": true,
      "description": "Select line number in editor",
      "params": [
        {
          "displayName": "LineNumber",
          "name": "lineNumber",
          "type": "tchmi:general#/definitions/Number",
          "visible": true,
          "bindable": true,
          "description": "Line number to goto"
        }
      ]
    }
